# ======================
# CONFIG MK-AUTH
# ======================

# URL pública raiz do MK-AUTH (sem /api no final)
MKAUTH_PUBLIC_URL=https://www.greennettelecom.com.br

# Credenciais da API MK-AUTH (Basic Auth para gerar o JWT)
MKAUTH_CLIENT_ID=seu_client_id_aqui
MKAUTH_CLIENT_SECRET=seu_client_secret_aqui


# ======================
# CONFIG EVOLUTION API
# ======================

# URL da Evolution (container ou host)
# Ex: http://evolution-api:7070  ou  http://evolution-lite:8080
EVOLUTION_API_URL=http://evolution-api:7070

# Nome da instância configurada na Evolution
EVOLUTION_INSTANCE_NAME=minha_instancia

# API key da Evolution
EVOLUTION_APIKEY=sua_apikey_aqui


# ======================
# OUTROS
# ======================

# Porta interna do bot
PORT=3000
